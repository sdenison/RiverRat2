@{
    ViewBag.Title = "Home Page";
}

<header>
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Welcome To Our Studio!</div>
            <div class="intro-heading">It's Time To Get Some Ink</div>
            <a href="#services" class="page-scroll btn btn-xl">Tell Me More</a>
            <div class="row">
                <a href="https://www.facebook.com/RiverRatTattoos">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary" style="color: #3b5998"></i>
                        <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>
</header>
<div class="container body-content">
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Services</h2>
                    <h3 class="section-subheading text-muted">We're a full service tattoo and piercing shop.</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-star fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Tattoos</h4>
                    <p class="text-muted">Your happiness is our number one concern.  We want you to be blown away when we show you your tattoo for the first time.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-star fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Piercings</h4>
                    <p class="text-muted">When it comes to piercings experience is what matters.  Our motto is "measure twice, pierce once".</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-star fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Removal</h4>
                    <p class="text-muted">That unsightly ink you got elsewhere doens't have to be with you forever.  Ask about our tattoo removal service.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="tattoos">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Tattoos</h2>
                <h3 class="section-subheading text-muted">Tattoos are our bread and butter.  We live and breathe this stuff.</h3>
            </div>
        </div>
        <div class="row text-center">
            <div id="carousel-tattoos" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-tattoos" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-tattoos" data-slide-to="1"></li>
                    <li data-target="#carousel-tattoos" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/TAT_1.5_Death_Before_Dishonor.jpg" alt="...">
                        <div class="carousel-caption">
                            <h3>Death Beore Dishonor</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/TAT_2.4_Strength.jpg" alt="...">
                        <div class="carousel-caption">
                            <h3>Strength</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/TAT_3.1_Love_&_Hate.jpg" alt="...">
                        <div class="carousel-caption">
                            <h3>Love and Hate</h3>
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-tattoos" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-tattoos" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div> <!-- Carousel -->
        </div>
    </section>

    <section id="piercings">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Piercings</h2>
                <h3 class="section-subheading text-muted">Experience matters.  Our peircers are trained in safety and precision.</h3>
            </div>
        </div>
        <div class="row text-center">
            <div id="carousel-piercings" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-piercings" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-piercings" data-slide-to="1"></li>
                    <li data-target="#carousel-piercings" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/TAT_8_Dahlia_Piercings.jpg" alt="...">
                        <div class="carousel-caption">
                            <h3>Dahlia</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/TAT_1.3_Ear_Plugs.jpg" alt="...">
                        <div class="carousel-caption">
                            <h3>Ear Plugs</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/TAT_6_Surface_Piercing.jpg" alt="...">
                        <div class="carousel-caption">
                            <h3>Surface Piercings</h3>
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-piercings" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-piercings" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div> <!-- Carousel -->
        </div>
    </section>
